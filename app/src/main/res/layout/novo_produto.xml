<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.22"
        android:weightSum="1"
        android:gravity="center_vertical|center|center_horizontal">

        <TextView
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="CADASTRO DE PRODUTO"
            android:id="@+id/textView11"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.55"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#3a496d" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.50"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="0.08"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nome:"
                android:id="@+id/textView12"
                android:textSize="16dp"
                android:textColor="#3a496d"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="5dp"></LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/idNomePro"
                android:layout_weight="0.35"
                android:textSize="14dp"
                android:background="@drawable/edit" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="1"
            android:gravity="center_vertical"
            android:layout_weight="0.08" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="12dp"
                android:layout_height="10dp"
                android:layout_weight="0.68" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fornecedor:"
                android:id="@+id/textView7"
                android:textSize="16dp"
                android:textColor="#3a496d"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="12dp"
                android:layout_height="5dp"
                android:layout_weight="0.68" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:gravity="center_vertical|center_horizontal" >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/spn_fornecedor"
                    android:touchscreenBlocksFocus="false"
                    android:background="@drawable/spinnervenda" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_weight="0.21">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="12dp"
                android:layout_height="10dp"
                android:layout_weight="0.68" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Categoria:"
                android:id="@+id/textView13"
                android:textSize="16dp"
                android:textColor="#3a496d"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="12dp"
                android:layout_height="5dp"
                android:layout_weight="0.68" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:gravity="center_vertical|center_horizontal">

                <Spinner
                    android:layout_width="250dp"
                    android:layout_height="45dp"
                    android:id="@+id/spn_categoria"
                    android:touchscreenBlocksFocus="false"
                    android:background="@drawable/spinner" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.68"></LinearLayout>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/button3"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:onClick="btCategoria"
                    android:background="@drawable/adicionarcategoria" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="PreÃ§o:"
                android:id="@+id/textView"
                android:textSize="16dp"
                android:textColor="#3a496d"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="5dp"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="269dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="R$ "
                    android:id="@+id/textView5"
                    android:textSize="16dp"
                    android:textColor="#3a496d"
                    android:textStyle="bold" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"></LinearLayout>

                <EditText
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:id="@+id/idPreco"
                    android:textSize="14dp"
                    android:background="@drawable/edit"
                    android:inputType="number"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center|right"
        android:weightSum="1"
        android:layout_weight="0.13">

        <Button
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:id="@+id/btcadastrar_produto"
            android:onClick="btcadastrar_produto"
            android:background="@drawable/salvarproduto"
            android:layout_weight="0.01" />

    </LinearLayout>
</LinearLayout>