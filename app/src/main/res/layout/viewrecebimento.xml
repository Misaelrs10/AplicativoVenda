<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:gravity="center|right"
            android:weightSum="1"
            android:layout_gravity="center_horizontal">

            <Spinner
                android:layout_width="330dp"
                android:layout_height="45dp"
                android:id="@+id/spinnerCliente"
                android:layout_weight="1"
                android:background="@drawable/spinnervenda" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="330dp"
            android:layout_height="350dp">

            <ListView
                android:layout_width="330dp"
                android:layout_height="350dp"
                android:id="@+id/listViewRecebimento"
                android:layout_gravity="center_vertical"
                android:textFilterEnabled="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:gravity="center|right"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.99"
                android:weightSum="1"
                android:gravity="left|bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Total recebido do cliente:"
                    android:id="@+id/textView34"
                    android:textSize="12dp"
                    android:layout_weight="0.20"
                    android:gravity="left|center_vertical" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:gravity="left">

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="R$"
                        android:id="@+id/textView35"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:layout_weight="0.01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/recebido"
                        android:layout_weight="0.06"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:inputType="number"
                        android:numeric="decimal" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:id="@+id/btnovoecebimento"
                android:gravity="center"
                android:onClick="btnovoRecebimento"
                android:nestedScrollingEnabled="true"
                android:background="@drawable/adicionarpagamento" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
